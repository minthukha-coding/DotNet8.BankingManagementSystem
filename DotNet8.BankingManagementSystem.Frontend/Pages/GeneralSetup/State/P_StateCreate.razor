@page "/general-setup/state/create"

<EditForm Model="@_model">
    <MudGrid Class="justify-content-center">
        <MudItem xs="12" sm="7">
            <MudText Typo="Typo.h6" Class="mud-width-full">State Create Form</MudText>
            <MudCard>
                <MudCardContent>
                    <MudTextField Label="State Code" @bind-Value="_model.StateCode" For="@(() => _model.StateCode)"/>
                    <MudTextField Label="State Name" Class="mt-3" @bind-Value="_model.StateName" For="@(() => _model.StateName)"/>
                </MudCardContent>
                <MudCardActions>
                    <MudButton ButtonType="ButtonType.Button" Variant="Variant.Filled" Href="/general-setup/state" Color="Color.Warning">
                        Cancel
                    </MudButton>
                    <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" @onclick="OnValidSubmit" Class="ml-2">Create State</MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>
    </MudGrid>
</EditForm>