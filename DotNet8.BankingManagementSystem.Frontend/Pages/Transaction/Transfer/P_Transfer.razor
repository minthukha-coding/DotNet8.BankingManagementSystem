@page "/transaction/transfer"

<EditForm Model="@_model" OnValidSubmit="OnValidSubmit">
    <MudGrid Class="justify-content-center my-4">
        <MudItem xs="12" sm="7">
            <MudCard>
                <MudCardContent>
                    <MudText Typo="Typo.h5" Class="mud-width-full">Transfer Balance</MudText>
                    <MudTextField Label="From Account No"
                                  @bind-Value="_model.FromAccountNo" For="@(() => _model.FromAccountNo)"/>
                    <MudTextField Label="To Account No"
                                  @bind-Value="_model.ToAccountNo" For="@(() => _model.ToAccountNo)"/>
                    <MudTextField Label="Amount" Class="mt-3"
                                  @bind-Value="_model.Amount" For="@(() => _model.Amount)"/>
                </MudCardContent>
                <MudCardActions>
                    <MudButton ButtonType="ButtonType.Button" Variant="Variant.Filled" Href="/report/transaction-history" Color="Color.Warning">
                        Cancel
                    </MudButton>
                    <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" Class="ml-2">Send</MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>
    </MudGrid>
</EditForm>