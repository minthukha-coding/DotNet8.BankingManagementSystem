@page "/transaction/withdraw"

<EditForm Model="@_model" OnValidSubmit="OnValidSubmit">
    <MudGrid Class="justify-content-center">
        <MudItem xs="12" sm="7">
            <MudText Typo="Typo.h5" Class="mud-width-full py-4">Withdraw</MudText>
            <MudCard>
                <MudCardContent>
                    <MudTextField Label="AccountNo"
                                  @bind-Value="_model.AccountNo" For="@(() => _model.AccountNo)"/>
                    <MudTextField Label="Amount" Class="mt-3"
                                  @bind-Value="_model.Balance" For="@(() => _model.Balance)"/>
                </MudCardContent>
                <MudCardActions>
                    <MudButton ButtonType="ButtonType.Button" Variant="Variant.Filled" Href="/report/transaction-history" Color="Color.Warning">
                        Cancel
                    </MudButton>
                    <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" Class="ml-2">Withdraw</MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>
    </MudGrid>
</EditForm>